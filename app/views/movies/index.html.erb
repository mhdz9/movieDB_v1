<p id="notice"><%= notice %></p>

<h1>Movies</h1>

<table>
  <thead>
    <tr>
      <th>Uid</th>
      <th>Title</th>
      <th>Genre</th>
      <th>Year</th>
      <th>Rating</th>
      <th>Country</th>
      <th>Language</th>
      <th>Actor</th>
      <th>Director</th>
      <th>Award</th>
      <th>Review</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.uid %></td>
        <td><%= movie.title %></td>
        <td><%= movie.genre %></td>
        <td><%= movie.year %></td>
        <td><%= movie.rating %></td>
        <td><%= movie.country %></td>
        <td><%= movie.language %></td>
        <td><%= movie.actor %></td>
        <td><%= movie.director %></td>
        <td><%= movie.award %></td>
        <td><%= movie.review %></td>
        <td><%= link_to 'Show', movie %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

