<!-- Custom styles for this template -->
<link href="https://getbootstrap.com/docs/4.0/examples/signin/signin.css" rel="stylesheet">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="container">
  <form class="form-signin">
    <h2 class="form-signin-heading">Log in</h2><br />
        <div class="field">
          <!--<%= f.label :email %><br />-->
          <!--<%= f.label :email, wrapper_html: { class: 'sr-only'} %><br />-->
          <%= f.email_field :email, autofocus: true, wrapper_html: { class: 'form-control' }, placeholder: 'Email address' %>
        </div>

        <div class="field">
          <!--<%= f.label :password %><br />-->
          <%= f.password_field :password, autocomplete: "off", wrapper_html: { class: 'form-control' }, placeholder: 'Password' %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Log in" %>
        </div>
      <% end %>

<%= render "devise/shared/links" %>
  </form>
</div>